#!/usr/bin/env python

import sys
import os
import os.path

def main(argv):
    #input argument is currently just the row of the matrix (start at 5th one)
    if argv[3] and argv[4]:
        command="forward"
    elif argv[3] and argv[2]:
        command= "slight left"
    elif argv[4] and argv[5]:
        command="slight right"
    elif argv[2] and argv[1]:
        command="moderate left"
    elif argv[5] and argv[6]:
        command="moderate right"
    elif argv[1] and argv[0]:
        command="hard left"
    elif argv[6] and argv[7]:
        command="hard right"
    else:
        command="stop"
    print (command)

#publish the command to the topic
    
if __name__=="__main__":
    main(sys.argv[0:])








